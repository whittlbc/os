          <input type="search" placeholder="Search projects" name="search" class="searchbox-input">
        </div>
      </div>
    </div>
  </div>
  <div class="project-type-nav">
    <div class="project-type-container">
      <a href="/#shouldStart"><div id="shouldStartType" class="project-type">Should Start</div></a><%
      %><a href="/#starting"><div id="startingType" class="project-type">Starting</div></a><%
      %><a href="/#started"><div id="startedType" class="project-type">Started</div></a>
    </div>
  </div>
</header>

<body>

  <div class="single-item"></div>

  <%= yield %>


  <!-- Login Popup -->
  <div class="myPopup hidden-popup">
    <div id="myPopup"></div>
  </div>
  <div class="popup-backdrop hidden-popup"></div>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="http://cdn.jsdelivr.net/jquery.slick/1.5.6/slick.min.js"></script>
  <%= javascript_include_tag "vanilla.js" %>
  <%= requirejs_include_tag "application.js" %>
</body>

