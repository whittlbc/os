
<table style="width: 100%;">
  <tbody style="width: 100%;">

  <!--HEADER-->
  <tr style="height: 70px; width: 100%;">
    <td align="left" valign="center" style="height: 70px; width: 100%; background-color: #f2f2f4; border-top: 10px solid white;">
      <img src="<%= @company_logo %>" style="padding-left: 20px; padding-top: 10px; text-align: left; max-height: 40px;"/>
    </td>
  </tr>

  <!--BODY-->
  <tr style="height: 34%; width: 100%;">
    <td align="left" valign="top" style="height: 34%; width: 100%; padding-left: 9%; padding-right: 9%; color: black; font-size: 1.1em; padding-top: 2%">
      <p style="line-height: 1.5em"><b>New Suggestion from <%= @username %></b>!</p>
    </td>
  </tr>

  <tr style="height: auto; width: 100%;">
    <td align="left" valign="top" style="height: auto; width: 100%; padding-left: 9%; padding-right: 9%; color: black; font-size: 1.1em; padding-bottom: 3%">
      <p style="line-height: 1.5em"><%= @text %></p>
    </td>
  </tr>

  <!--FOOTER-->
  <tr style="height: 50px; width: 100%; background-color: #f2f2f4;">
    <td align="center" valign="center" style="height: 50px; width: 100%; ">
      <p style="margin: 0; min-height: 20px; padding-top: 8px; font-size: 0.75em; font-weight: 300; color: #93959B; text-align: center;">Sourcehoney, LLC&nbsp;&nbsp;&nbsp;&middot;&nbsp;&nbsp;&nbsp;San Francisco, CA</p>
    </td>
  </tr>

  </tbody>
</table>
